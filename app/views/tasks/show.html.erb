<h1><%= @task.title %></h1>

<h2><%= @task.details %></h2>

<% if @task.completed %>
  <p>(X) This task is completed.</p>
  <% else %>
  <p>( ) This task is not completed yet.</p>
<% end %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit", edit_task_path(@task) %></p>
